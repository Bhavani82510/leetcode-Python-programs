class Solution(object):
    def reverse(self, x):
        """
        :type x: int
        :rtype: int
        """
        sign = -1 if x < 0 else 1
        x *= sign
        
        # Reverse the integer using string manipulation
        rev = int(str(x)[::-1]) * sign
        
        # 32-bit signed integer range check
        if rev < -2**31 or rev > 2**31 - 1:
            return 0
        
        return rev
